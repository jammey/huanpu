<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "bogo.ruanjianyuan"
        version   = "1.0.0">
  <name>环普一卡通</name>
  <description>
    环普科技产业园
  </description>
  <access origin="*" />
  <author href="http://phonegap.com" email="support@163.com">
    环普科技产业园
  </author>
  <preference name="phonegap-version" value="3.4.0" />
  <gap:plugin name="org.apache.cordova.inappbrowser" />

  <feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    <param name="ios-package" value="CDVConnection" />
  </feature>

  <gap:plugin name="com.phonegap.plugin.statusbar" />
  <gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
  </gap:config-file>
  <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
  </gap:config-file>
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="orientation" value="portrait" />
  <preference name="Fullscreen" value="true" />
  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="5000" />
  <icon src="icon.png"/>
  <icon gap:platform="android" gap:qualifier="ldpi" src="res/drawable-ldpi/ic_launcher.png" />
  <icon gap:platform="android" gap:qualifier="mdpi" src="res/drawable-mdpi/ic_launcher.png" />
  <icon gap:platform="android" gap:qualifier="hdpi" src="res/drawable-hdpi/ic_launcher.png" />
  <icon gap:platform="android" gap:qualifier="xhdpi" src="res/drawable-xhdpi/ic_launcher.png" />
  <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/drawable-xxhdpi/ic_launcher.png" />
  <icon gap:platform="ios" height="57" src="res/icon/ios/3.png" width="57" />
  <icon gap:platform="ios" height="114" src="res/icon/ios/2.png" width="114" />
  <gap:splash src="res/screen/android/bg_01.png"  gap:platform="android" gap:density="ldpi" />
  <gap:splash src="res/screen/android/bg_02.png"  gap:platform="android" gap:density="mdpi" />
  <gap:splash src="res/screen/android/bg_03.png"  gap:platform="android" gap:density="hdpi" />
  <gap:splash src="res/screen/android/bg_04.png" gap:platform="android" gap:density="xhdpi" />
  <gap:splash src="res/screen/ios/Default.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />
  <!-- content src="http://www.w3.org/2010/05/video/mediaevents.html" / -->
</widget>
