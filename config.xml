<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "bogo.ruanjianyuan"
        version   = "1.0.0">
  <name>环普一卡通</name>
  <description>
    环普科技产业园
  </description>
  <access origin="*" />
  <author href="http://phonegap.com" email="support@163.com">
    环普科技产业园
  </author>
  
  <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    <gap:plugin name="com.phonegap.plugins.barcodescanner"/>

  <gap:config-file platform="ios" parent="UIStatusBarHidden"  overwrite="true">
    <true/>
  </gap:config-file>
  <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
    <false/>
  </gap:config-file>
  <gap:config-file platform="ios" parent="CFBundleVersion">
    <string>7</string>
  </gap:config-file>
  <preference name="phonegap-version" value="3.4.0" />
  <preference name="orientation"      value="default" />
    <preference name="EnableViewportScale"      value="false" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="true" />
    <preference name="webviewbounce"    value="false" />
    <preference name="splash-screen-duration" value="2000"/>
  <icon gap:platform="android" gap:qualifier="ldpi" src="res/icons/android/ic_launcher_ldpi.png" />
  <icon gap:platform="android" gap:qualifier="mdpi" src="res/icons/android/ic_launcher_mdpi.png" />
  <icon gap:platform="android" gap:qualifier="hdpi" src="res/icons/android/ic_launcher_hdpi.png" />
  <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icons/android/ic_launcher_xhdpi.png" />
  <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icons/android/ic_launcher_xxhdpi.png" />
  <icon src="res/icons/ios/57.png"            gap:platform="ios"        width="57" height="57" />
  <icon src="res/icons/ios/72.png"            gap:platform="ios"        width="72" height="72" />
  <icon src="res/icons/ios/114.png"         gap:platform="ios"        width="114" height="114" />
  <icon src="res/icons/ios/144.png"         gap:platform="ios"        width="144" height="144" />
  <icon src="res/icons/ios/120.png"            gap:platform="ios"        width="120" height="120" />
  <icon src="res/icons/ios/152.png"            gap:platform="ios"        width="152" height="152" />
  <icon src="res/icons/ios/76.png"         gap:platform="ios"        width="76" height="76" />
  <gap:splash src="res/screen/android/bg_01.png"  gap:platform="android" gap:density="ldpi" />
  <gap:splash src="res/screen/android/bg_02.png"  gap:platform="android" gap:density="mdpi" />
  <gap:splash src="res/screen/android/bg_03.png"  gap:platform="android" gap:density="hdpi" />
  <gap:splash src="res/screen/android/bg_04.png" gap:platform="android" gap:density="xhdpi" />
  <gap:splash src="res/screen/ios/320_480.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="res/screen/ios/640_960.png" gap:platform="ios" width="640" height="960" />
  <gap:splash src="res/screen/ios/640_1136.png" gap:platform="ios" height="1136"  width="640" />
  <!-- content src="http://www.w3.org/2010/05/video/mediaevents.html" / -->
</widget>
